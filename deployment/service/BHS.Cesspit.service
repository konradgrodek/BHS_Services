# Contents of /etc/systemd/system/BHS.Cesspit.service
[Unit]
Description=BHS Cesspit Monitoring service
After=network.target
Requires=mariadb.service
StartLimitIntervalSec=60

[Service]
Type=simple
Restart=always
Restart=60
ExecStart=/usr/local/bin/BHS.Cesspit.py
KillMode=control-group
KillSignal=SIGTERM
StandardOutput=syslog
StandardError=syslog
User=root
Group=root

[Install]
WantedBy=multi-user.target



